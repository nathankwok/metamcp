# MetaMCP Terraform Variables Example
# Copy this file to terraform.tfvars and update with your values

# Core Project Configuration
project_id      = "your-gcp-project-id"
region          = "us-central1"
environment     = "production"  # or "development", "staging"
service_prefix  = "metamcp"

# Cloud Run Configuration
frontend_image = "gcr.io/your-project-id/metamcp-frontend:latest"
backend_image  = "gcr.io/your-project-id/metamcp-backend:latest"

# Resource Allocation
frontend_cpu    = "1000m"
frontend_memory = "1Gi"
backend_cpu     = "2000m"
backend_memory  = "2Gi"

# Scaling Configuration
frontend_min_instances = 0
frontend_max_instances = 50
backend_min_instances  = 0
backend_max_instances  = 100

frontend_concurrency = 100
backend_concurrency  = 80

# Database Configuration
database_tier                   = "db-f1-micro"  # or db-g1-small, db-n1-standard-1, etc.
database_disk_size             = 20
database_disk_type             = "PD_SSD"
database_backup_enabled        = true
database_backup_start_time     = "03:00"
database_maintenance_window_day = 1    # Sunday = 1
database_maintenance_window_hour = 4   # 4 AM

# Networking Configuration
create_vpc          = true
vpc_name           = ""  # Leave empty to auto-generate
create_vpc_connector = true
vpc_connector_cidr  = "10.8.0.0/28"

# Redis Configuration
enable_redis         = true
redis_memory_size_gb = 1
redis_tier          = "BASIC"  # or "STANDARD_HA"

# Security Configuration
database_require_ssl = true
enable_private_ip   = true

# Authorized networks for Cloud SQL (optional)
# authorized_networks = [
#   {
#     name  = "office-network"
#     value = "203.0.113.0/24"
#   }
# ]

# Monitoring Configuration
enable_monitoring = true

# Notification channels for alerts (optional)
# notification_channels = [
#   "projects/your-project-id/notificationChannels/CHANNEL_ID"
# ]

# Custom Domain Configuration (optional)
# domain_name           = "metamcp.yourdomain.com"
# ssl_certificate_name  = "your-ssl-cert"

# Service Account Configuration
create_service_accounts = true

# Feature Flags
enable_cloud_armor = false
enable_cdn        = false
enable_iap        = false

# Labels
labels = {
  team        = "platform"
  application = "metamcp"
  cost_center = "engineering"
}

